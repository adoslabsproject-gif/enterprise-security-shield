{
    "name": "ados-labs/enterprise-security-shield",
    "description": "Enterprise Security Shield - WAF, Honeypot, Scanner Detection, Rate Limiting, Resilience Patterns with Admin Panel Integration",
    "type": "library",
    "keywords": [
        "security",
        "waf",
        "middleware",
        "honeypot",
        "rate-limiting",
        "circuit-breaker",
        "resilience",
        "anomaly-detection",
        "prometheus",
        "opentelemetry",
        "health-check",
        "admin-panel"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "AdosLabs",
            "email": "dev@adoslabs.com",
            "homepage": "https://github.com/adoslabsproject-gif"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=10.1 <12.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "ext-redis": "*",
        "ext-pdo": "*"
    },
    "suggest": {
        "ext-redis": "Required for RedisStorage backend (recommended for production)",
        "ext-pdo": "Required for DatabaseStorage backend",
        "ados-labs/enterprise-admin-panel": "For admin panel integration with security dashboard"
    },
    "autoload": {
        "psr-4": {
            "AdosLabs\\EnterpriseSecurityShield\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdosLabs\\EnterpriseSecurityShield\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "stan": "phpstan analyse src/ --level=9",
        "fix": "php-cs-fixer fix",
        "fix-dry": "php-cs-fixer fix --dry-run --diff",
        "quality": [
            "@fix-dry",
            "@stan"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "admin-panel": {
            "module": "AdosLabs\\EnterpriseSecurityShield\\AdminIntegration\\SecurityShieldAdminModule",
            "priority": 15
        }
    }
}
