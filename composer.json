{
    "name": "senza1dio/security-shield",
    "description": "Security Middleware for PHP - Honeypot, Scanner Detection, Rate Limiting, Resilience Patterns",
    "type": "library",
    "keywords": [
        "security",
        "middleware",
        "honeypot",
        "rate-limiting",
        "circuit-breaker",
        "resilience",
        "anomaly-detection",
        "prometheus",
        "opentelemetry",
        "health-check"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "AIDOS (AI Developer Orchestration System)",
            "email": "senza1dio@gmail.com",
            "homepage": "https://github.com/senza1dio"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=10.1 <12.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "ext-redis": "*",
        "ext-pdo": "*"
    },
    "suggest": {
        "ext-redis": "Required for RedisStorage backend (recommended for production)",
        "ext-pdo": "Required for DatabaseStorage backend"
    },
    "autoload": {
        "psr-4": {
            "Senza1dio\\SecurityShield\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Senza1dio\\SecurityShield\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "stan": "phpstan analyse src/ --level=9",
        "fix": "php-cs-fixer fix",
        "fix-dry": "php-cs-fixer fix --dry-run --diff",
        "quality": [
            "@fix-dry",
            "@stan"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
